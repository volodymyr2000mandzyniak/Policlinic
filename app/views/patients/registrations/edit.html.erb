<div class="patient-edit-container">
  <div class="edit-profile-card">
    <div class="edit-profile-header">
      <h2><i class="fas fa-user-edit"></i> Редагування профілю</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "edit-profile-form" }) do |f| %>
      <%= render "patients/shared/error_messages", resource: resource %>

      <div class="form-section">
        <h3><i class="fas fa-id-card"></i> Особисті дані</h3>

        <div class="form-row">
          <div class="form-group">
            <%= f.label :first_name, "Ім'я" %>
            <%= f.text_field :first_name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :last_name, "Прізвище" %>
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :date_of_birth, "Дата народження" %>
          <%= f.date_select :date_of_birth,
                start_year: 1900,
                end_year: Date.today.year - 5,
                default: resource.date_of_birth || 20.years.ago.to_date,
                order: [:day, :month, :year],
                prompt: { day: 'День', month: 'Місяць', year: 'Рік' },
                class: "form-select" %>
        </div>

        <div class="form-group">
          <%= f.label :photo, "Фото профілю" %>
          <%= f.file_field :photo, class: "form-control" %>
        </div>
      </div>

      <div class="form-section">
        <h3><i class="fas fa-address-book"></i> Контактна інформація</h3>

        <div class="form-group">
          <%= f.label :email, "Email" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :phone, "Телефон" %>
          <%= f.text_field :phone, autocomplete: "tel", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :address, "Адреса" %>
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>

      <div class="form-section">
        <h3><i class="fas fa-lock"></i> Зміна пароля</h3>

        <div class="form-group">
          <%= f.label :password, "Новий пароль" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted">Мінімум <%= @minimum_password_length %> символів</small>
          <% else %>
            <small class="form-text text-muted">(залиште порожнім, якщо не хочете змінювати)</small>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Підтвердження пароля" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :current_password, "Поточний пароль" %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
          <small class="form-text text-muted">(потрібен для підтвердження змін)</small>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit "Оновити профіль", class: "btn update-btn" %>
        <%= link_to "Назад", :back, class: "btn back-btn" %>
      </div>
    <% end %>

    <div class="account-section">
      <h3><i class="fas fa-exclamation-triangle"></i> Видалення акаунта</h3>
      <p>Видалити ваш обліковий запис? Цю дію не можна скасувати.</p>
      <%= button_to registration_path(resource_name),
            method: :delete,
            data: { confirm: "Ви впевнені, що хочете видалити свій акаунт?" },
            class: "btn delete-account-btn" do %>
        <i class="fas fa-trash-alt"></i> Видалити мій акаунт
      <% end %>
    </div>
  </div>
</div>

<style>
  .patient-edit-container {
    max-width: 800px;
    margin: 2rem auto;
    padding: 0 1rem;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .edit-profile-card {
    background: white;
    border-radius: 10px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    overflow: hidden;
  }

  .edit-profile-header {
    background: linear-gradient(135deg, #1976d2, #0d47a1);
    color: white;
    padding: 1.5rem;
  }

  .edit-profile-header h2 {
    margin: 0;
    font-size: 1.5rem;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .edit-profile-form {
    padding: 1.5rem;
  }

  .form-section {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #e0e0e0;
  }

  .form-section:last-child {
    border-bottom: none;
  }

  .form-section h3 {
    color: #1976d2;
    font-size: 1.2rem;
    margin-top: 0;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .form-row {
    display: flex;
    gap: 20px;
    margin-bottom: 1rem;
  }

  .form-row .form-group {
    flex: 1;
  }

  .form-group {
    margin-bottom: 1.2rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: #424242;
  }

  .form-control {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 1rem;
    transition: border-color 0.3s;
  }

  .form-control:focus {
    border-color: #1976d2;
    outline: none;
    box-shadow: 0 0 0 2px rgba(25, 118, 210, 0.2);
  }

  .form-select {
    display: inline-block;
    margin-right: 10px;
    padding: 0.5rem;
    border: 1px solid #ddd;
    border-radius: 5px;
    background-color: white;
  }

  .form-text {
    display: block;
    margin-top: 0.25rem;
    font-size: 0.85rem;
  }

  .form-actions {
    display: flex;
    justify-content: space-between;
    margin-top: 2rem;
  }

  .btn {
    padding: 0.75rem 1.5rem;
    border-radius: 5px;
    font-size: 1rem;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    transition: all 0.3s ease;
    text-decoration: none;
    border: none;
    cursor: pointer;
  }

  .update-btn {
    background-color: #1976d2;
    color: white;
  }

  .update-btn:hover {
    background-color: #1565c0;
  }

  .back-btn {
    background-color: #e0e0e0;
    color: #424242;
  }

  .back-btn:hover {
    background-color: #bdbdbd;
  }

  .account-section {
    padding: 1.5rem;
    border-top: 1px solid #e0e0e0;
    background-color: #fff8e1;
  }

  .account-section h3 {
    color: #d32f2f;
    font-size: 1.2rem;
    margin-top: 0;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .account-section p {
    color: #616161;
    margin-bottom: 1.5rem;
  }

  .delete-account-btn {
    background-color: #d32f2f;
    color: white;
  }

  .delete-account-btn:hover {
    background-color: #b71c1c;
  }

  @media (max-width: 768px) {
    .form-row {
      flex-direction: column;
      gap: 0;
    }

    .form-actions {
      flex-direction: column-reverse;
      gap: 10px;
    }

    .btn {
      width: 100%;
    }
  }
</style>
