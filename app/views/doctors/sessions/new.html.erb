    display: flex;
    align-items: center;
  }
  
  /* Інші стилі залишаються незмінними */
  .doctor-content-wrapper {
    max-width: 600px;
    margin: 0 auto;
    padding: 1rem;
  }
  
  @media (min-width: 992px) {
    .doctor-content-wrapper {
      margin: 0;
      padding: 0 2rem 0 0;
    }
  }
  
  .doctor-welcome-title {
    font-weight: 800;
    color: var(--gray-900);
    margin-bottom: 1.5rem;
    font-size: clamp(1.75rem, 5vw, 2.5rem);
    line-height: 1.2;
  }
  
  .doctor-description {
    font-size: 1.125rem;
    line-height: 1.75;
    color: var(--gray-600);
    margin-bottom: 2rem;
  }
  
  .doctor-login-card {
